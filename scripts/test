#!/bin/bash

set -e

if [[ -n "${OAR_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Run tests.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        ./scripts/lint

        docker-compose \
            run --rm --no-deps app \
            yarn test

        docker-compose \
            run --rm --entrypoint python django \
            manage.py test --noinput
    fi
fi
